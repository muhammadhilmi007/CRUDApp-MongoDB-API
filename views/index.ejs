<%- include('layout/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong><%= message.message %></strong>
                    </div>
                <% } %>
                <div class="table-responsive">
                    <% if (users != '') { %>
                    <table id="usersTable" class="table table-striped table-hover table-bordered text-center my-4">
                        <thead>
                            <tr class="table-primary">
                                <th scope="col">ID</th>
                                <th scope="col">Image</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <th scope="row"><%= index + 1 %></th>
                                    <td><img src="./uploads/<%= row.image %>" alt="" width="100" height="100" style="object-fit: cover; border-radius: 5%;"></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="btn btn-warning"><i class="fa fa-edit mr-2" style="margin-right: 5px;"></i>Edit</a>
                                        <a href="/delete/<%= row._id %>" class="btn btn-danger"><i class="fa fa-trash mr-2" style="margin-right: 5px;"></i>Delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody> 
                    </table>
                    <% } else { %>
                        <h1 class="text-center text-secondary mt-5">No Users Found</h1>
                    <% } %>  
                </div>
            </div>
        </div>
    </div>

   

<%- include('layout/footer') %>